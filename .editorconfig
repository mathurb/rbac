# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Newline ending every file and trailing white space trimmed
[*]
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown should not have trailing white space trimmed
[*.md]
trim_trailing_whitespace = false

# Script and json files character set
[{src,scripts}/**.{ts,json,js}]
charset = utf-8

# 4 space indentation
[**.*]
indent_style = space
indent_size = 4

[**.y*ml]
indent_style = space
indent_size = 2
