{
    "compileOnSave": false,
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "module": "esnext",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "lib": ["es2020"]
    }
}
